<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_fragment_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crazyhitty.chdev.ks.munch.ui.activities.SplashActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_splash_dots">

        <TextView
            android:id="@+id/text_view_splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@string/roboto_light"
            android:gravity="center"
            android:textColor="@color/md_grey_100"
            android:textSize="@dimen/text_size_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_splash"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/splash_1" />

            <TextView
                android:id="@+id/text_view_splash_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/md_grey_100"
                android:textSize="@dimen/text_size_avg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_empty_dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_dot" />

            <Space
                android:layout_width="@dimen/space_small"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_view_empty_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_dot" />

            <Space
                android:layout_width="@dimen/space_small"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_view_empty_dot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_dot" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_selected_dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selected_dot" />

            <Space
                android:layout_width="@dimen/space_small"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_view_selected_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selected_dot"
                android:visibility="invisible" />

            <Space
                android:layout_width="@dimen/space_small"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_view_selected_dot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selected_dot"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
