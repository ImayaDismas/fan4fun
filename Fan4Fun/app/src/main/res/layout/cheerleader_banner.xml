<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cheerleader_banner_height"
    android:background="@drawable/red_canvas_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-18dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/cheerleader_banner_title"
        android:textColor="@color/banner_title"
        android:textSize="30sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/banner_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/cheerleader_banner_subtitle"
        android:textColor="@color/banner_subtitle"
        android:textSize="15sp" />

</FrameLayout>