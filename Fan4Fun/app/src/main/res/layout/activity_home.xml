<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#9D82C4"
    tools:context="com.dismas.imaya.fan4fun.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Text0"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="Welcome to Fan4Fun"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/Text0"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_2"
        android:background="#F08718" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search for audio music."
        android:id="@+id/textView"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/button1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Music"
        android:id="@+id/button"
        android:background="@drawable/other_button"
        style="@style/other_button"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_4"
        android:background="#2196F3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search for video music."
        android:id="@+id/textView1"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:layout_alignStart="@+id/textView"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/button1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Music"
        android:id="@+id/button1"
        android:background="@drawable/other_button1"
        style="@style/other_button"
        android:layout_below="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />


</RelativeLayout>