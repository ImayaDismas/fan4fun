<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/puce_inner_dot_margin"
        android:left="@dimen/puce_inner_dot_margin"
        android:right="@dimen/puce_inner_dot_margin"
        android:top="@dimen/puce_inner_dot_margin">
        <shape android:shape="oval">
            <solid android:color="@color/puce_inner_dot" />
        </shape>
    </item>


    <item>
        <shape
            android:innerRadius="@dimen/puce_radius"
            android:shape="ring"
            android:thickness="@dimen/puce_thickness"
            android:useLevel="false">
            <solid android:color="@color/puce_ring" />
            <size
                android:height="@dimen/puce_size"
                android:width="@dimen/puce_size" />
        </shape>
    </item>
</layer-list>